{
  "compilerOptions": {
    "target": "esNext",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  // this include statement tells tsc to include all TypeScript files (*.ts) in the root directory and all of its subdirectories (**/).
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist",
  ]
}